pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                sh 'chmod +x mvnw'
                sh './mvnw compile'
            }
        }

        stage('SonarQube analysis') {
            environment {
                scannerHome = tool 'SonarQube Scanner'
            }
            steps {
                script {
                    sh 'chmod +x mvnw' // Donner les autorisations d'ex√©cution au fichier mvnw
                    withSonarQubeEnv(installationName: 'Sonar_Qube') {
                        sh './mvnw sonar:sonar'
                    }
                }
            }
        }
    }
}
